# Dockerfile for bench-race agent
#
# Build:
#   docker build -f deploy/Dockerfile.agent -t bench-race-agent .
#
# Run:
#   docker run -p 9001:9001 --name bench-agent bench-race-agent

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY agent/requirements.txt /app/agent/requirements.txt
RUN pip install --no-cache-dir -r agent/requirements.txt

# Copy application code
COPY agent/ /app/agent/
COPY backends/ /app/backends/
COPY shared/ /app/shared/
COPY bin/control /app/bin/control

# Create directories
RUN mkdir -p /app/run/pids /app/logs

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV AGENT_HOST=0.0.0.0
ENV AGENT_PORT=9001

# Expose port
EXPOSE 9001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:9001/health || exit 1

# Run the agent
CMD ["python", "-m", "uvicorn", "agent.agent_app:app", "--host", "0.0.0.0", "--port", "9001"]
